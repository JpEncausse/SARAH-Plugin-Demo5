<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="ruleDemo5" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
  <rule id="ruleDemo5" scope="public">
    <example>Sarah appel la démo</example>
    <tag>out.action=new Object(); </tag>

    <item>Sarah</item>

    <one-of>
      <item>appel la démo<tag>out.action.param1=100</tag></item>
      <item>lance la démo<tag>out.action.param1=200</tag></item>
    </one-of>

    <tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/demo5";</tag>
  </rule> 
</grammar>